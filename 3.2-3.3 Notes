
public class Main
{
	public static void main(String[] args) {
		System.out.println("_Structure of an if-statement_");
		if(boolean condition)
		    action;
		    //Or 
		if(boolean condition) //ALSO use brackets when multiple actions
		{
		    action;
		}
		
		System.out.println("Example. Rolling two standard six sided dice. ");
		int d1 = (int)(Math.random()*6) + 1;
        int d2 = (int)(Math.random()*6) + 1;
        int sum = d1 + d2;
        if(d1 == d2)
            sum *= 2;
        if(d1 == 1)
            sum = 0;
        if(d2 == 1)
            sum = 0;
	}
}
